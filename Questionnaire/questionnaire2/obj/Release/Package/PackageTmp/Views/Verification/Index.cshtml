@model Questionnaire2.ViewModels.UserVerifications

<table id="verificationsTable" style="width: 75%">
    <tr>
        <td colspan="5">
            <h3><u>Unverified Users:</u></h3>
        </td>
    </tr>
@foreach (var item in Model.UsersUnverified)
{
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UsersUnverified.FirstOrDefault().UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsersUnverified.FirstOrDefault().FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsersUnverified.FirstOrDefault().LastName)
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>   
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.UserId)
            @Html.Raw(item.UserName)
        </td>
        <td>
            @Html.Raw(item.FirstName)
        </td>
        <td>
            @Html.Raw(item.LastName)
        </td>
        <td>
            @Html.Raw(item.VerifiedCount)/@Html.Raw(item.VerifiedCount + item.UnverifiedCount)
        </td>
        <td>
            @Html.ActionLink("Application", "List", new { id = item.UserId })
            @* | @Html.ActionLink("Delete", "Delete", new { id=item.UserId })*@
        </td>
    </tr>
}


