@model IEnumerable<Questionnaire2.Models.QuestionnaireQCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("DuplicateQuestionnaireQCategory", "QuestionnaireQCategory", FormMethod.Post))
{
    <fieldset>
        <legend></legend>
    <p>
        
        @Html.TextBox("Ordinal", 6)
        <input type="submit" value="Make Copy" />
    </p>
    </fieldset>
}
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Questionnaire.QuestionnaireName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QCategory.QCategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ordinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubOrdinal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Questionnaire.QuestionnaireName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QCategory.QCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ordinal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubOrdinal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
